{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jekyll Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Firebase Serve",
            "type": "shell",
            "command": "firebase serve",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Firebase Deploy",
            "type": "shell",
            "command": "JEKYLL_ENV=production && jekyll clean && jekyll build && firebase deploy",
            "windows": {
                "command": "set JEKYLL_ENV=production && jekyll clean && jekyll build && firebase deploy"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}